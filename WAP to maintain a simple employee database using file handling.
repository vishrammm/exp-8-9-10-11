#include <stdio.h>

struct Employee {
    int id;
    char name[50];
    float salary;
};

int main() {
    struct Employee e;
    FILE *fp;
    int n, i;

    fp = fopen("employee.txt", "a");   // Open file in append mode

    if (fp == NULL) {
        printf("Error opening file!");
        return 1;
    }

    printf("Enter number of employees to add: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("\nEnter details of employee %d:\n", i + 1);

        printf("ID: ");
        scanf("%d", &e.id);

        printf("Name: ");
        scanf("%s", e.name);

        printf("Salary: ");
        scanf("%f", &e.salary);

        // Write to file
        fprintf(fp, "ID: %d\nName: %s\nSalary: %.2f\n\n", e.id, e.name, e.salary);
    }

    fclose(fp);

    printf("\nEmployee data stored successfully in 'employee.txt'\n");

    return 0;
}
